<% include ../partials/header %>
<br><br>
<div class="container">
    <h1 style="text-align: center">Create a New Blog</h1>
    <div class="row">
        
        <div style="width: 70%; margin: 25px auto;">
            <form action="/blogs" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter the title of the blog">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="provide the image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10" cols="200"  type="text" name="description" placeholder="Write in your idea"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-primary ">Post!</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>


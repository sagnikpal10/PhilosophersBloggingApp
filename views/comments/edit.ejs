<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center">Edit Comment</h1>
    <div class="row">
        <div style="width: 70%; margin: 25px auto;">
            <form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="5" cols="200" type="text" name="comment[text]" value="<%= comment.text %>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-primary btn-block">Update!</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>


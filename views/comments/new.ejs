<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center">Add New Comment to <%= blog.name %></h1>
    <div class="row">
        <div style="width: 70%; margin: 25px auto;">
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="5" cols="200" type="text" name="comment[text]" placeholder=" write your comment . . . "></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-primary btn-block">Post!</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>

